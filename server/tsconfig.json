{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@dataBase/*": ["dataBase/*"],
      "@error": ["error/ApiError.ts"],
      "@controllers/*": ["controllers/*"],
      "@middleware": ["middleware/errorHandlingMiddleware.ts"]
    }
  },
  "lib": ["es2015"],
  "exclude": ["node_modules"]
}
